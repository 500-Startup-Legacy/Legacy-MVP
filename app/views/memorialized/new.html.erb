
<%= form_tag({controller: "memorialized", action: "create"}, method: "post") do %>
  <%= label_tag(:email, "Email") %>
  <%= text_field_tag(:email) %>
  <%= label_tag(:group_tag, "Relationship") %>
  <%= select_tag(:group_tag, options_for_select(['friend', 'family', 'coworker'])) %>
  <%= submit_tag("Memorialize") %>
<% end %>
